require './application'

task :initmoods do
  Trait.create(:name => "alert",     :valence => 1, :arousal => 1)
  Trait.create(:name => "excited",   :valence => 1, :arousal => 1)
  Trait.create(:name => "elated",    :valence => 1, :arousal => 1)
  Trait.create(:name => "happy",     :valence => 1, :arousal => 1)
  Trait.create(:name => "contented", :valence => 1, :arousal => -1)
  Trait.create(:name => "serene",    :valence => 1, :arousal => -1)
  Trait.create(:name => "relaxed",   :valence => 1, :arousal => -1)
  Trait.create(:name => "calm",      :valence => 1, :arousal => -1)
  Trait.create(:name => "sad",       :valence => -1, :arousal => -1)
  Trait.create(:name => "depressed", :valence => -1, :arousal => -1)
  Trait.create(:name => "bored",     :valence => -1, :arousal => -1)
  Trait.create(:name => "fatigued",  :valence => -1, :arousal => -1)
  Trait.create(:name => "tense",     :valence => -1, :arousal => 1)
  Trait.create(:name => "nervous",   :valence => -1, :arousal => 1)
  Trait.create(:name => "stressed",  :valence => -1, :arousal => 1)
  Trait.create(:name => "upset",     :valence => -1, :arousal => 1)
end
